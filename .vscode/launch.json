  "version": "0.2.0",
  "configurations": [{
    "name": "Launch Mocha",
    "type": "node",
    "request": "launch",
    "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
    "args": ["{test,src}/**/*.spec.js{,x}", "--no-timeouts"],
    "cwd": "${workspaceRoot}",
    "sourceMaps": true,
    "env": {
      "NODE_ENV": "test"
    },
    "runtimeArgs": [
      "--nolazy",
      "--require", "babel-register",
      "--require", "${workspaceRoot}/node_modules/yoshi/config/mocha-setup.js"
    ]
  },
  {
    "name": "Mocha CurFile",
    "type": "node",
    "request": "launch",
    "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
    "args": ["${relativeFile}", "--no-timeouts"],
    "cwd": "${workspaceRoot}",
    "sourceMaps": true,
    "env": {
      "NODE_ENV": "test"
    },
    "runtimeArgs": [
      "--nolazy",
      "--require", "babel-register",
      "--require", "should",
      "--require", "${workspaceRoot}/node_modules/yoshi/config/mocha-setup.js"
    ]
  },
  {
    "name": "Launch Protractor",
    "type": "node",
    "request": "launch",
    "program": "${workspaceRoot}/node_modules/protractor/bin/protractor",
    "args": ["${workspaceRoot}/node_modules/yoshi/config/protractor.conf.js"],
    "cwd": "${workspaceRoot}",
    "sourceMaps": true,
    "env": {
      "NODE_ENV": "test"
    },
    "runtimeArgs": [
      "--nolazy"
    ]
  }]
}